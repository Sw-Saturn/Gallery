{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.yaml$"
      ],
      "matchStrings": [
        "hugo-version: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gohugoio/hugo",
      "extractVersion": "^v(?<version>.*)$"
    }
  ]
}
