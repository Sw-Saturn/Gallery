{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "^\\.github/workflows/.*\\.yaml$"
      ],
      "matchStrings": [
        "hugo-version: (?<currentValue>.*)"
      ],
      "datasourceTemplate": "github-releases",
      "depNameTemplate": "gohugoio/hugo",
      "versioningTemplate": "regex:^v(?<major>\\d+)[.](?<minor>\\d+)[.](?<patch>\\d+)-(?<build>\\d{8})\\.\\w+$"
    }
  ]
}
